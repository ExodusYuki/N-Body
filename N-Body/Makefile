all:
	$(CXX) N-Body.cpp -O3 -o nbody -std=c++11 -ltbb -lpng -lz
benchmark:
	$(CXX) Benchmark_N-Body.cpp -O3 -o benchmarknbody -std=c++11 -ltbb -lpng -lz
run:
	./nbody
clean:
	find . -name "nbody" -exec rm -rf {} \;
	find . -name "benchmarknbody" -exec rm -rf {} \;
	find . -name "*.png" -exec rm -rf {} \;
	find . -name "*.csv" -exec rm -rf {} \;
